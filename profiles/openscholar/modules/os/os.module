/**
 * Implements hook_menu_alter().
 */
function os_menu_alter(&$items) {
  if (isset($items['user'])) {
    $items['user']['page callback'] = 'os_user_page';
    $items['user']['file'] = 'os.pages.inc';
    $items['user']['file path'] = drupal_get_path('module', 'os');
  }

  // Use custom callbacks for these menu items that will display a message
  // if site is in read-only mode. Access callbacks are altered to TRUE to get
  // to the page callback which will check the default access callback.
  $items['user/login']['page callback'] = 'os_in_read_mode_login';
  $items['user/register']['page callback'] = 'os_in_read_mode_register';
  $items['user/register']['access callback'] = TRUE;
  $items['user/password']['page callback'] = 'os_in_read_mode_password';

  // Check if Pinserver should take over registration menu entries.
  if (variable_get('os_pinserver_registration', FALSE)){
    $items['site/register']['page callback'] = 'os_in_read_mode_site_register_pinserver';
  }
  else {
    $items['site/register']['page callback'] = 'os_in_read_mode_site_register';
  }
  $items['site/register']['access callback'] = TRUE;

  // Displays 404 Not Found instead of default /node page.
  if (isset($items['node'])) {
    unset($items['node']);
  }
  // By default, "user/autocomplete" requires "view user profiles" permission.
  // Since we want authenticated users to have access to the autocomplete
  // callback, but we don't want authenticated users to have access to other
  // users' profiles, we provide our own permission and override the default
  // behavior of the menu item to use our custom permission instead.
  $items['user/autocomplete']['access arguments'] = array(
    'access user autocomplete',
  );
}

/**
 * Page callback for user/login.
 */
function os_in_read_mode_login() {
  if (variable_get('os_readonly_mode', FALSE)) {
    return variable_get('os_readonly_mode_message', OS_READONLY_MODE_MESSAGE);
  }

  if (user_is_anonymous()) {
    return drupal_get_form('user_login');
  }

  drupal_access_denied();
}

/**
 * Page callback for user/register.
 */
function os_in_read_mode_register() {
  if (variable_get('os_readonly_mode', FALSE)) {
    return variable_get('os_readonly_mode_message', OS_READONLY_MODE_MESSAGE);
  }

  if (user_register_access()) {
    return drupal_get_form('user_register_form');
  }

  drupal_access_denied();
}

/**
 * Page callback for user/password.
 */
function os_in_read_mode_password() {
  if (variable_get('os_readonly_mode', FALSE)) {
    return variable_get('os_readonly_mode_message', OS_READONLY_MODE_MESSAGE);
  }

  return drupal_get_form('user_pass');
}

/**
 * Page callback for site/register, pinserver authentication.
 */
function os_in_read_mode_site_register_pinserver() {
  if (variable_get('os_readonly_mode', FALSE)) {
    return variable_get('os_readonly_mode_message', OS_READONLY_MODE_MESSAGE);
  }

  if (module_exists('os_pinserver_auth') && os_pinserver_auth_register_access()) {
    return os_pinserver_auth_vsite_register_form_page();
  }

  return drupal_get_form('vsite_register_form');
}

/**
 * Page callback for site/register.
 */
function os_in_read_mode_site_register() {
  if (variable_get('os_readonly_mode', FALSE)) {
    return variable_get('os_readonly_mode_message', OS_READONLY_MODE_MESSAGE);
  }

  if (vsite_vsite_exists_access()) {
    return drupal_get_form('vsite_register_form');
  }
}

