/**
 * API function for copy a file from a URL and throw exception when needed.
 *
 * @param $url
 *  The URL of the file.
 * @param bool $exception
 *  Determine if an exception need to be thrown when the copy of the file
 *  failed. When set to false the reason for the failure will return as a text
 *  in the returned array.
 *
 * @throws Exception
 *  Throwing an error when the copy of the file failed and the $exception set to
 *  TRUE.
 * @return array
 *  Return array of the file or error if occurred and the type of the return
 *  data(file/text).
 */
function os_copy_file($url, $exception = FALSE) {
  if (empty($url)) {
    return os_file_copy_set_error(t('You need to pass a url of the file.'), $exception);
  }

  if (drupal_http_request($url)->code != 200) {
    return os_file_copy_set_error(t("The file was not reachable."), $exception);
  }

  if (!is_writeable('public://')) {
    return os_file_copy_set_error(t("The file directory is not wrietable. Please check her permission."), $exception);
  }

  if (!$file = system_retrieve_file($url, 'public://', TRUE)) {
    return os_file_copy_set_error(t('An error occurred due unknown reason.'), $exception);
  }

  return array(
    'type' => 'file',
    'file' => $file,
  );
}

/**
 * Set error when trying to copy the file.
 *
 * @see os_copy_file().
 */
function os_file_copy_set_error($message, $exception) {
  if ($exception) {
    throw new Exception($message);
  }

  return array(
    'type' => 'error',
    'message' => $message,
  );
}
